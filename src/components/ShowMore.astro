---
type Props = {
  description: string;
  date: string;
  location: string;
  writer: string;
  director: string;
  techDirector: string;
  coDesign: string;
  addMore: string;
};

const {
  description,
  date,
  location,
  writer,
  director,
  techDirector,
  coDesign,
  addMore,
} = Astro.props;
---

<details class="details__container--page">
  <summary class="summary"><em>Details</em></summary>
  <ul class="details__content">
    <li class="details__content--item">{description}</li>
    <li class="details__content--item">{date}</li>
    <li class="details__content--item">{location}</li>
    <li class="details__content--item">Writter: {writer}</li>
    <li class="details__content--item">Director: {director}</li>
    <li class="details__content--item">Technical Director: {techDirector}</li>
    <li class="details__content--item">{coDesign}</li>
    <li class="details__content--item">{addMore}</li>
  </ul>
</details>

<style>
  .details__container--page {
    margin: 0.5rem 0 2rem 0;
    font-size: 0.9em;
  }

  .summary {
    cursor: pointer;
  }

  .details__content {
    position: absolute;
    z-index: 222;
    background: var(--color__background);
    padding: 4rem 2rem;
  }

  .details__content--item {
    margin: 0.25rem 0;
  }
</style>
